<h1>
  Welcome to your awesome cocktail app
</h1>

<%= link_to 'Add a new cocktail', new_cocktail_path, class: 'btn btn-primary' %>

<h2>
  List of currently existing cocktails
</h2>

<ul>
  <% @cocktails.each do |cocktail| %>
    <div class="container">
      <div class="row">
        <li>
          <p><%= cocktail.name %></p>
        <%= link_to 'Show cocktail', cocktail_path(cocktail), class: 'btn btn-warning' %>
        </li>
      </div>
    </div>
  <% end %>
</ul>
